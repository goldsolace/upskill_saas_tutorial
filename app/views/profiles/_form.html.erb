<%= form_for @profile, url: user_profile_path do |f| %>
  <div class="field form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :job_title %>
    <%= f.select :job_title, ['Developer','Entrepreneur', 'Investor'], {} ,class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :contact_email %><br />
    <%= f.email_field :contact_email, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :description %><br />
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group text-center">
    <%= f.submit "Update Profile", class: 'btn btn-success' %>
  </div>
<% end %>